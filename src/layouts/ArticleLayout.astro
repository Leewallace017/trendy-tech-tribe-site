---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSenseAnchor from '../components/AdSenseAnchor.astro';
import AdSenseSidebar from '../components/AdSenseSidebar.astro';

interface Props {
  title: string;
  seoTitle?: string;
  seoDescription: string;
  date: string;
  category: string;
  tags: string[];
  summary: string;
  image: string;
  imageAlt?: string;
}

const {
  title,
  seoTitle,
  seoDescription,
  date,
  category,
  tags,
  summary,
  image,
  imageAlt
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// JSON-LD Schema
const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": seoDescription,
  "datePublished": date,
  "image": new URL(image, Astro.site),
  "author": {
    "@type": "Organization",
    "name": "Trendy Tech Tribe"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Trendy Tech Tribe",
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/images/logos/logo.svg', Astro.site)
    }
  }
};
---

<BaseLayout
  title={seoTitle || title}
  description={seoDescription}
  type="article"
  image={image}
>
  <Header />

  <main>
    <article class="article">
      <header class="article-header">
        <div class="article-container">
          <div class="article-meta">
            <span class="category-badge">{category}</span>
            <time datetime={date}>{formattedDate}</time>
          </div>

          <h1 class="article-title">{title}</h1>
          <p class="article-summary">{summary}</p>

          {tags.length > 0 && (
            <div class="article-tags">
              {tags.map(tag => (
                <a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag">
                  {tag}
                </a>
              ))}
            </div>
          )}
        </div>
      </header>

      <div class="article-hero-image">
        {image.endsWith('.webp') && image.includes('/optimized/') ? (
          <picture>
            <source
              type="image/webp"
              srcset={`${image.replace('.webp', '-small.webp')} 640w, ${image.replace('.webp', '-medium.webp')} 1024w, ${image} 1792w`}
              sizes="(max-width: 768px) 100vw, (max-width: 1200px) 1200px, 1200px"
            />
            <img
              src={image}
              alt={imageAlt || title}
              fetchpriority="high"
              width="1792"
              height="1024"
              decoding="async"
            />
          </picture>
        ) : (
          <img src={image} alt={imageAlt || title} fetchpriority="high" />
        )}
      </div>

      <div class="article-layout article-container">
        <div class="article-content">
          <slot />
        </div>

        <aside class="article-sidebar">
          <AdSenseSidebar />
        </aside>
      </div>
    </article>
  </main>

  <Footer />

  <!-- AdSense Anchor Ad (Mobile only) -->
  <AdSenseAnchor />

  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
</BaseLayout>

<style>
  .article {
    padding: var(--space-2xl) 0;
  }

  .article-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
  }

  .article-hero-image {
    max-width: var(--max-width);
    margin: 0 auto var(--space-2xl);
    padding: 0 var(--space-md);
  }

  .article-hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  [data-theme="dark"] .article-hero-image img {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: 0.875rem;
  }

  .category-badge {
    background-color: var(--color-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  time {
    color: var(--color-text-light);
  }

  .article-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: var(--space-md);
  }

  .article-summary {
    font-size: 1.25rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    background-color: var(--color-bg-alt);
    color: var(--color-text);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    transition: all 0.2s;
  }

  .tag:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .article-layout {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--space-2xl);
    align-items: start;
    max-width: 1200px;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    min-width: 0;
  }

  .article-sidebar {
    display: block;
  }

  .article-content :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    font-size: 1.875rem;
  }

  .article-content :global(h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-md);
    font-size: 1.5rem;
  }

  .article-content :global(img) {
    margin: var(--space-xl) 0;
    border-radius: 8px;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  /* Table Styles */
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-xl) 0;
    font-size: 0.9rem;
    background-color: var(--color-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  [data-theme="dark"] .article-content :global(table) {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .article-content :global(thead) {
    background-color: var(--color-primary);
    color: white;
  }

  .article-content :global(th) {
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-content :global(td) {
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .article-content :global(tbody tr:last-child td) {
    border-bottom: none;
  }

  .article-content :global(tbody tr) {
    transition: background-color 0.2s;
  }

  .article-content :global(tbody tr:hover) {
    background-color: var(--color-bg-alt);
  }

  /* Mobile table responsiveness - horizontal scroll wrapper */
  .article-content :global(.table-wrapper) {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: var(--space-xl) 0;
  }

  @media (max-width: 1024px) {
    .article-layout {
      grid-template-columns: 1fr 250px;
      gap: var(--space-lg);
    }
  }

  @media (max-width: 768px) {
    .article-layout {
      grid-template-columns: 1fr;
    }

    .article-sidebar {
      display: none;
    }

    .article-title {
      font-size: 2rem;
    }

    .article-summary {
      font-size: 1.125rem;
    }

    .article-content {
      font-size: 1rem;
    }

    /* Mobile table adjustments */
    .article-content :global(table) {
      font-size: 0.8rem;
      display: block;
      max-width: 100%;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      white-space: nowrap;
    }

    .article-content :global(th),
    .article-content :global(td) {
      padding: 0.5rem;
      min-width: 100px;
    }

    .article-content :global(th) {
      font-size: 0.75rem;
    }
  }
</style>
