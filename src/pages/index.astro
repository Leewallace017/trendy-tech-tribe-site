    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .trending-card:hover .trending-image img {
    transform: scale(1.05);
  }

  .trending-category {
    font-size: var(--text-body-xs);
    color: var(--neon-magenta);
    font-weight: var(--weight-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .trending-title {
    font-size: var(--text-body-lg);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    line-height: var(--line-snug);
    margin: 0;
    transition: color var(--transition-normal);
  }

  .trending-card:hover .trending-title {
    color: var(--neon-cyan);
  }

  /* Mobile / Tablet Responsive */
  @media (max-width: 1024px) {
    .hero-card {
      height: 400px;
    }
    
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (max-width: 768px) {
    .hero-card {
      height: 350px;
    }

    .hero-content {
      padding: var(--space-6);
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-summary {
      font-size: 1rem;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .trending-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
    
    .trending-card {
      flex-direction: row;
      align-items: center;
    }
    
    .trending-image {
      width: 100px;
      aspect-ratio: 1;
      flex-shrink: 0;
    }
  }

  /* Existing Styles */
  .category-section {
    margin-bottom: var(--space-20);
  }

  .category-section h2 {
    font-size: var(--text-h2);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-4);
    border-bottom: 3px solid transparent;
    border-image: var(--gradient-neon-h);
    border-image-slice: 1;
    letter-spacing: var(--tracking-tight);
    position: relative;
  }

  .category-section h2::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-neon-h);
    box-shadow: var(--glow-cyan);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-6);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  .empty-state {
    color: var(--text-tertiary);
    font-style: italic;
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: var(--weight-semibold);
    color: var(--neon-cyan);
    margin-top: var(--space-4);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .section-link:hover {
    color: var(--neon-magenta);
    transform: translateX(4px);
  }




</style>

<script>
  // Scroll Observer for Fade-in Animations
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target); // Only animate once
      }
    });
  }, observerOptions);

  document.querySelectorAll('.scroll-trigger').forEach(el => {
    observer.observe(el);
  });
</script>
