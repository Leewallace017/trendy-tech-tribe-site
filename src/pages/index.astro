  }

  .trending-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16 / 9;
    border: 1px solid var(--border-subtle);
    transition: border-color var(--transition-normal);
  }

  .trending-card:hover .trending-image {
