---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';
import { optimizeUnsplashUrl } from '../utils/imageOptimization';

// Get latest posts from each category
const techPosts = (await getCollection('tech')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const aiPosts = (await getCollection('ai')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const evsPosts = (await getCollection('evs')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const energyPosts = (await getCollection('energy')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const marketsPosts = (await getCollection('markets')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const picksPosts = (await getCollection('picks')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

// Get featured post (rotate among top 5 featured or latest)
const allPosts = [
  ...await getCollection('tech'),
  ...await getCollection('ai'),
  ...await getCollection('evs'),
  ...await getCollection('energy'),
  ...await getCollection('markets'),
  ...await getCollection('picks'),
].sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// 1. Filter for explicitly featured posts
const featuredCandidates = allPosts.filter(post => post.data.featured === true);

// 2. Select pool of candidates (top 5 featured OR top 5 latest if no featured)
const candidatePool = featuredCandidates.length > 0 
  ? featuredCandidates.slice(0, 5) 
  : allPosts.slice(0, 5);

// 3. Randomly select one from the pool
// Note: In a static build, this "random" selection happens at build time.
// In SSR or Dev, it happens on each request.
const featuredPost = candidatePool[Math.floor(Math.random() * candidatePool.length)];

// Prepare hero image
const isUnsplash = featuredPost?.data.image.includes('unsplash.com');
const heroImage = isUnsplash 
  ? optimizeUnsplashUrl(featuredPost.data.image, 1600) 
  : featuredPost?.data.image;

const categoryMap: Record<string, string> = {
  'Tech & Innovation': 'tech',
  'AI & Automation': 'ai',
  'EVs & Mobility': 'evs',
  'Energy & Policy': 'energy',
  'Markets & Money': 'markets',
  'Picks & Reviews': 'picks',
};
---

<BaseLayout
  title="Trendy Tech Tribe"
  description="Your source for tech news, AI insights, EV updates, energy policy, market analysis, and product reviews."
>
  <Header />

  <main>
    <!-- Hero Section -->
    {featuredPost && (
      <section class="hero">
        <div class="hero-background">
          <img 
            src={heroImage} 
            alt={featuredPost.data.imageAlt || featuredPost.data.title}
            loading="eager"
            decoding="async"
          />
          <div class="hero-overlay"></div>
        </div>
        <div class="container">
          <div class="hero-content">
            <span class="hero-category">{featuredPost.data.category}</span>
            <h1 class="hero-title">
              <a href={`/${categoryMap[featuredPost.data.category]}/${featuredPost.slug}`}>
                {featuredPost.data.title}
              </a>
            </h1>
            <p class="hero-summary">{featuredPost.data.summary}</p>
            <a href={`/${categoryMap[featuredPost.data.category]}/${featuredPost.slug}`} class="hero-cta">
              Read More →
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Category Sections -->
    <div class="container">
      <section class="category-section">
        <h2>Tech & Innovation</h2>
        <div class="posts-grid">
          {techPosts.length > 0 ? techPosts.map(post => (
            <PostCard post={post} categorySlug="tech" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/tech" class="section-link">View all Tech posts →</a>
      </section>

      <section class="category-section">
        <h2>AI & Automation</h2>
        <div class="posts-grid">
          {aiPosts.length > 0 ? aiPosts.map(post => (
            <PostCard post={post} categorySlug="ai" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/ai" class="section-link">View all AI posts →</a>
      </section>

      <section class="category-section">
        <h2>EVs & Mobility</h2>
        <div class="posts-grid">
          {evsPosts.length > 0 ? evsPosts.map(post => (
            <PostCard post={post} categorySlug="evs" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/evs" class="section-link">View all EV posts →</a>
      </section>

      <!-- Join the Tribe CTA -->
      <section class="tribe-cta">
        <div class="tribe-content">
          <h2>Join the Tribe</h2>
          <p>Trendy Tech Tribe is here to help you navigate the fast-paced universe of technology. From revealing the latest gadgets to decoding complex tech trends, we empower our tribe with the knowledge they need to stay ahead of the curve.</p>
          <div class="tribe-image">
            <picture>
              <source
                type="image/webp"
                srcset="/images/optimized/join-the-tribe-small.webp 640w,
                        /images/optimized/join-the-tribe-medium.webp 1024w,
                        /images/optimized/join-the-tribe.webp 1456w"
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 900px, 900px"
              />
              <img
                src="/images/optimized/join-the-tribe.webp"
                alt="Join the Trendy Tech Tribe community"
                loading="lazy"
                decoding="async"
                width="1456"
                height="832"
              />
            </picture>
          </div>
          <NewsletterSignup />
        </div>
      </section>

      <section class="category-section">
        <h2>Energy & Policy</h2>
        <div class="posts-grid">
          {energyPosts.length > 0 ? energyPosts.map(post => (
            <PostCard post={post} categorySlug="energy" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/energy" class="section-link">View all Energy posts →</a>
      </section>

      <section class="category-section">
        <h2>Markets & Money</h2>
        <div class="posts-grid">
          {marketsPosts.length > 0 ? marketsPosts.map(post => (
            <PostCard post={post} categorySlug="markets" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/markets" class="section-link">View all Markets posts →</a>
      </section>

      <section class="category-section">
        <h2>Picks & Reviews</h2>
        <div class="posts-grid">
          {picksPosts.length > 0 ? picksPosts.map(post => (
            <PostCard post={post} categorySlug="picks" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/picks" class="section-link">View all Picks posts →</a>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .hero {
    position: relative;
    background: var(--bg-primary);
    color: white;
    padding: var(--space-32) 0;
    margin-bottom: var(--space-16);
    overflow: hidden;
    min-height: 600px;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      rgba(10, 6, 20, 0.95) 0%,
      rgba(10, 6, 20, 0.8) 50%,
      rgba(10, 6, 20, 0.4) 100%
    );
    z-index: 1;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 50%, rgba(123, 31, 162, 0.2) 0%, transparent 50%);
    z-index: 2;
    mix-blend-mode: overlay;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-16) 0;
      min-height: auto;
    }
    
    .hero-overlay {
      background: linear-gradient(
        180deg,
        rgba(10, 6, 20, 0.8) 0%,
        rgba(10, 6, 20, 0.9) 100%
      );
    }
  }

  .hero-content {
    position: relative;
    max-width: 800px;
    z-index: 10;
  }

  .hero-category {
    display: inline-block;
    background: rgba(180, 74, 255, 0.3);
    border: 1px solid var(--tribal-purple);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    font-size: var(--text-body-sm);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-6);
    box-shadow: var(--glow-purple);
    backdrop-filter: blur(4px);
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: var(--text-display);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-6);
    line-height: var(--line-tight);
    letter-spacing: var(--tracking-tight);
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .hero-title a {
    color: white;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: opacity var(--transition-normal);
  }

  .hero-title a:hover {
    opacity: 0.8;
  }

  .hero-summary {
    font-size: var(--text-body-xl);
    margin-bottom: var(--space-8);
    line-height: var(--line-relaxed);
    color: var(--text-gray-100);
    max-width: 65ch;
    text-shadow: 0 1px 2px rgba(0,0,0,0.5);
  }

  .hero-cta {
    display: inline-block;
    background: linear-gradient(135deg, var(--neon-magenta), var(--neon-cyan));
    color: white;
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-md);
    font-weight: var(--weight-semibold);
    font-size: var(--text-body-lg);
    transition: all var(--transition-normal) var(--easing-smooth);
    box-shadow: var(--glow-magenta);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    color: white;
    box-shadow: var(--glow-magenta-intense), var(--shadow-lg);
  }

  .category-section {
    margin-bottom: var(--space-20);
  }

  .category-section h2 {
    font-size: var(--text-h2);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-4);
    border-bottom: 3px solid transparent;
    border-image: var(--gradient-neon-h);
    border-image-slice: 1;
    letter-spacing: var(--tracking-tight);
    position: relative;
  }

  .category-section h2::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-neon-h);
    box-shadow: var(--glow-cyan);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-6);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  .empty-state {
    color: var(--text-tertiary);
    font-style: italic;
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: var(--weight-semibold);
    color: var(--neon-cyan);
    margin-top: var(--space-4);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .section-link:hover {
    color: var(--neon-magenta);
    transform: translateX(4px);
  }

  .tribe-cta {
    position: relative;
    background: var(--gradient-bg);
    padding: var(--space-24);
    border-radius: var(--radius-2xl);
    margin: var(--space-24) 0;
    border: 1px solid var(--border-bright);
    box-shadow: var(--glow-soft), var(--shadow-xl);
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .tribe-cta {
      padding: var(--space-8);
      margin: var(--space-12) 0;
      border-radius: var(--radius-lg);
    }
  }

  .tribe-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.5;
    pointer-events: none;
  }

  .tribe-content {
    position: relative;
    z-index: 1;
  }

  .tribe-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    border: none;
    padding: 0;
    text-align: center;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tribe-content > p {
    font-size: var(--text-body-lg);
    line-height: var(--line-relaxed);
    max-width: 800px;
    margin: 0 auto var(--space-12);
    text-align: center;
    color: var(--text-secondary);
  }

  .tribe-image {
    max-width: 900px;
    margin: 0 auto var(--space-16);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      var(--glow-magenta),
      0 16px 48px rgba(0, 0, 0, 0.4);
    border: 1px solid var(--border-bright);
  }

  .tribe-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .tribe-content h2 {
      font-size: 2rem;
    }

    .tribe-content p {
      font-size: 1rem;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-summary {
      font-size: 1.125rem;
    }
  }
</style>
