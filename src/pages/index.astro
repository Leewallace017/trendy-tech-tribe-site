      height: auto !important; /* Override tablet breakpoint */
      min-height: 0 !important; /* Remove min-height: 100% constraint */
      flex: none !important; /* Remove flex sizing */
      background: var(--bg-secondary);
    }

    .hero-bg img {
      object-fit: contain !important; /* Override base cover setting */
      width: 100%;
      height: auto !important; /* Override base 100% height */
    }
  }

  /* Trending Strip */
  .trending-section {
    margin-bottom: var(--space-20);
  }

  .trending-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .trending-label {
    font-family: var(--font-display);
    font-size: var(--text-h5);
    font-weight: var(--weight-bold);
    color: var(--neon-cyan);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    white-space: nowrap;
  }

  .trending-line {
    height: 1px;
    width: 100%;
    background: linear-gradient(90deg, var(--neon-cyan), transparent);
    opacity: 0.5;
  }

  .trending-grid {
