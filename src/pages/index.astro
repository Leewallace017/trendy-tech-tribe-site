---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get latest posts from each category
const techPosts = (await getCollection('tech')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const aiPosts = (await getCollection('ai')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const evsPosts = (await getCollection('evs')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const energyPosts = (await getCollection('energy')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const marketsPosts = (await getCollection('markets')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const picksPosts = (await getCollection('picks')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

// Get featured post
const allPosts = [
  ...await getCollection('tech'),
  ...await getCollection('ai'),
  ...await getCollection('evs'),
  ...await getCollection('energy'),
  ...await getCollection('markets'),
  ...await getCollection('picks'),
];

const featuredPost = allPosts.find(post => post.data.featured) || allPosts[0];

const categoryMap: Record<string, string> = {
  'Tech & Innovation': 'tech',
  'AI & Automation': 'ai',
  'EVs & Mobility': 'evs',
  'Energy & Policy': 'energy',
  'Markets & Money': 'markets',
  'Picks & Reviews': 'picks',
};
---

<BaseLayout
  title="Trendy Tech Tribe"
  description="Your source for tech news, AI insights, EV updates, energy policy, market analysis, and product reviews."
>
  <Header />

  <main>
    <!-- Hero Section -->
    {featuredPost && (
      <section class="hero">
        <div class="container">
          <div class="hero-content">
            <span class="hero-category">{featuredPost.data.category}</span>
            <h1 class="hero-title">
              <a href={`/${categoryMap[featuredPost.data.category]}/${featuredPost.slug}`}>
                {featuredPost.data.title}
              </a>
            </h1>
            <p class="hero-summary">{featuredPost.data.summary}</p>
            <a href={`/${categoryMap[featuredPost.data.category]}/${featuredPost.slug}`} class="hero-cta">
              Read More →
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Category Sections -->
    <div class="container">
      <section class="category-section">
        <h2>Tech & Innovation</h2>
        <div class="posts-grid">
          {techPosts.length > 0 ? techPosts.map(post => (
            <article class="post-card">
              <a href={`/tech/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/tech/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/tech" class="section-link">View all Tech posts →</a>
      </section>

      <section class="category-section">
        <h2>AI & Automation</h2>
        <div class="posts-grid">
          {aiPosts.length > 0 ? aiPosts.map(post => (
            <article class="post-card">
              <a href={`/ai/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/ai/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/ai" class="section-link">View all AI posts →</a>
      </section>

      <section class="category-section">
        <h2>EVs & Mobility</h2>
        <div class="posts-grid">
          {evsPosts.length > 0 ? evsPosts.map(post => (
            <article class="post-card">
              <a href={`/evs/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/evs/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/evs" class="section-link">View all EV posts →</a>
      </section>

      <!-- Join the Tribe CTA -->
      <section class="tribe-cta">
        <div class="tribe-content">
          <h2>Join the Tribe</h2>
          <p>Trendy Tech Tribe is here to help you navigate the fast-paced universe of technology. From revealing the latest gadgets to decoding complex tech trends, we empower our tribe with the knowledge they need to stay ahead of the curve.</p>
          <div class="tribe-image">
            <img src="/join-the-tribe.png" alt="Join the Trendy Tech Tribe community" />
          </div>
          <div class="newsletter-signup">
            <h3>Get Weekly Tech Insights</h3>
            <p class="signup-description">Join thousands staying ahead of the curve. Get curated tech news, AI updates, and product reviews delivered to your inbox.</p>
            <form class="signup-form" action="/api/subscribe" method="POST">
              <input
                type="email"
                name="email"
                placeholder="Enter your email address"
                required
                class="email-input"
              />
              <button type="submit" class="subscribe-button">Subscribe</button>
            </form>
          </div>
        </div>
      </section>

      <section class="category-section">
        <h2>Energy & Policy</h2>
        <div class="posts-grid">
          {energyPosts.length > 0 ? energyPosts.map(post => (
            <article class="post-card">
              <a href={`/energy/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/energy/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/energy" class="section-link">View all Energy posts →</a>
      </section>

      <section class="category-section">
        <h2>Markets & Money</h2>
        <div class="posts-grid">
          {marketsPosts.length > 0 ? marketsPosts.map(post => (
            <article class="post-card">
              <a href={`/markets/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/markets/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/markets" class="section-link">View all Markets posts →</a>
      </section>

      <section class="category-section">
        <h2>Picks & Reviews</h2>
        <div class="posts-grid">
          {picksPosts.length > 0 ? picksPosts.map(post => (
            <article class="post-card">
              <a href={`/picks/${post.slug}`} class="post-image">
                <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
              </a>
              <div class="post-content">
                <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
                <h3>
                  <a href={`/picks/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p>{post.data.summary}</p>
              </div>
            </article>
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/picks" class="section-link">View all Picks posts →</a>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .hero {
    position: relative;
    background: var(--gradient-bg);
    color: white;
    padding: var(--space-24) 0;
    margin-bottom: var(--space-16);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(0, 255, 255, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(255, 0, 255, 0.15) 0%, transparent 50%);
    animation: pulseGlow 8s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes pulseGlow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .hero-content {
    position: relative;
    max-width: 800px;
    z-index: 1;
  }

  .hero-category {
    display: inline-block;
    background: rgba(180, 74, 255, 0.3);
    border: 1px solid var(--tribal-purple);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    font-size: var(--text-body-sm);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-6);
    box-shadow: var(--glow-purple);
  }

  [data-theme="light"] .hero-category {
    background: rgba(123, 31, 162, 0.15);
    color: var(--tribal-purple);
    border-color: var(--tribal-purple);
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: var(--text-display);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-6);
    line-height: var(--line-tight);
    letter-spacing: var(--tracking-tight);
  }

  .hero-title a {
    color: white;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: opacity var(--transition-normal);
  }

  .hero-title a:hover {
    opacity: 0.8;
  }

  .hero-summary {
    font-size: var(--text-body-xl);
    margin-bottom: var(--space-8);
    line-height: var(--line-relaxed);
    color: var(--text-secondary);
    max-width: 65ch;
  }

  [data-theme="light"] .hero-summary {
    color: var(--text-primary);
  }

  .hero-cta {
    display: inline-block;
    background: linear-gradient(135deg, var(--neon-magenta), var(--neon-cyan));
    color: white;
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-md);
    font-weight: var(--weight-semibold);
    font-size: var(--text-body-lg);
    transition: all var(--transition-normal) var(--easing-smooth);
    box-shadow: var(--glow-magenta);
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    color: white;
    box-shadow: var(--glow-magenta-intense), var(--shadow-lg);
  }

  .category-section {
    margin-bottom: var(--space-20);
  }

  .category-section h2 {
    font-size: var(--text-h2);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-4);
    border-bottom: 3px solid transparent;
    border-image: var(--gradient-neon-h);
    border-image-slice: 1;
    letter-spacing: var(--tracking-tight);
    position: relative;
  }

  .category-section h2::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-neon-h);
    box-shadow: var(--glow-cyan);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-6);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-glow);
    box-shadow: var(--glow-soft), var(--shadow-lg);
  }

  .post-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    display: block;
    background: var(--bg-tertiary);
  }

  .post-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(10, 6, 20, 0.4) 70%,
      rgba(10, 6, 20, 0.7) 100%
    );
    pointer-events: none;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) var(--easing-smooth);
  }

  .post-card:hover .post-image img {
    transform: scale(1.08);
  }

  .post-content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .post-date {
    display: block;
    font-size: var(--text-body-sm);
    color: var(--text-tertiary);
    font-weight: var(--weight-medium);
    margin-bottom: 0;
  }

  .post-card h3 {
    font-size: var(--text-h4);
    font-weight: var(--weight-bold);
    line-height: var(--line-snug);
    margin: 0;
  }

  .post-card h3 a {
    color: var(--text-primary);
    transition: color var(--transition-normal) var(--easing-smooth);
  }

  .post-card h3 a:hover {
    color: var(--neon-cyan);
  }

  .post-card p {
    font-size: var(--text-body);
    color: var(--text-secondary);
    line-height: var(--line-normal);
    margin: 0;
  }

  .empty-state {
    color: var(--text-tertiary);
    font-style: italic;
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: var(--weight-semibold);
    color: var(--neon-cyan);
    margin-top: var(--space-4);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .section-link:hover {
    color: var(--neon-magenta);
    transform: translateX(4px);
  }

  .tribe-cta {
    position: relative;
    background: var(--gradient-bg);
    padding: var(--space-24);
    border-radius: var(--radius-2xl);
    margin: var(--space-24) 0;
    border: 1px solid var(--border-bright);
    box-shadow: var(--glow-soft), var(--shadow-xl);
    overflow: hidden;
  }

  .tribe-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.5;
    pointer-events: none;
  }

  .tribe-content {
    position: relative;
    z-index: 1;
  }

  .tribe-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    border: none;
    padding: 0;
    text-align: center;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tribe-content > p {
    font-size: var(--text-body-lg);
    line-height: var(--line-relaxed);
    max-width: 800px;
    margin: 0 auto var(--space-12);
    text-align: center;
    color: var(--text-secondary);
  }

  .tribe-image {
    max-width: 900px;
    margin: 0 auto var(--space-16);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      var(--glow-magenta),
      0 16px 48px rgba(0, 0, 0, 0.4);
    border: 1px solid var(--border-bright);
  }

  .tribe-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .newsletter-signup {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    background: var(--bg-glass);
    backdrop-filter: blur(16px) saturate(180%);
    padding: var(--space-10);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(180, 74, 255, 0.3);
  }

  .newsletter-signup h3 {
    font-size: var(--text-h3);
    font-weight: var(--weight-bold);
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .signup-description {
    font-size: var(--text-body);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    line-height: var(--line-relaxed);
  }

  .signup-form {
    display: flex;
    gap: var(--space-3);
    max-width: 500px;
    margin: 0 auto;
  }

  .email-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border: 2px solid var(--border-normal);
    border-radius: var(--radius-md);
    font-size: var(--text-body);
    font-family: var(--font-primary);
    background-color: var(--bg-tertiary);
    color: var(--text-primary);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .email-input:focus {
    outline: none;
    border-color: var(--neon-cyan);
    box-shadow: 0 0 0 4px rgba(0, 255, 255, 0.1), var(--glow-cyan);
  }

  .email-input::placeholder {
    color: var(--text-tertiary);
  }

  .subscribe-button {
    padding: var(--space-3) var(--space-8);
    background: linear-gradient(135deg, var(--neon-magenta), var(--neon-cyan));
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: var(--text-body);
    font-weight: var(--weight-semibold);
    cursor: pointer;
    transition: all var(--transition-normal) var(--easing-smooth);
    font-family: var(--font-primary);
    white-space: nowrap;
    box-shadow: var(--glow-magenta);
  }

  .subscribe-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--glow-magenta-intense), var(--shadow-lg);
  }

  .subscribe-button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .tribe-content h2 {
      font-size: 2rem;
    }

    .tribe-content p {
      font-size: 1rem;
    }

    .newsletter-signup h3 {
      font-size: 1.5rem;
    }

    .signup-form {
      flex-direction: column;
    }

    .subscribe-button {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-summary {
      font-size: 1rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
