---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';
import { optimizeUnsplashUrl } from '../utils/imageOptimization';

// Get latest posts from each category
const techPosts = (await getCollection('tech')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const aiPosts = (await getCollection('ai')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const evsPosts = (await getCollection('evs')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const energyPosts = (await getCollection('energy')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const marketsPosts = (await getCollection('markets')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const picksPosts = (await getCollection('picks')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

// Get featured posts (Top 3 featured or latest)
const allPosts = [
  ...await getCollection('tech'),
  ...await getCollection('ai'),
  ...await getCollection('evs'),
  ...await getCollection('energy'),
  ...await getCollection('markets'),
  ...await getCollection('picks'),
].sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// 1. Filter for explicitly featured posts
const featuredCandidates = allPosts.filter(post => post.data.featured === true);

// 2. Select top 3 (prefer featured, fill with latest if needed)
let featuredPosts = [];
if (featuredCandidates.length >= 3) {
  featuredPosts = featuredCandidates.slice(0, 3);
} else {
  // Take all featured, then fill the rest with latest non-featured
  featuredPosts = [...featuredCandidates];
  const remainingCount = 3 - featuredPosts.length;
  const nonFeatured = allPosts.filter(p => !p.data.featured);
  featuredPosts = [...featuredPosts, ...nonFeatured.slice(0, remainingCount)];
}

// Ensure we have unique posts (dedupe by id just in case)
featuredPosts = Array.from(new Map(featuredPosts.map(p => [p.id, p])).values()).slice(0, 3);

const [mainFeature, ...sideFeatures] = featuredPosts;

// Prepare hero image for main feature
const isUnsplash = mainFeature?.data.image.includes('unsplash.com');
const mainHeroImage = isUnsplash 
  ? optimizeUnsplashUrl(mainFeature.data.image, 1600) 
  : mainFeature?.data.image;

const categoryMap: Record<string, string> = {
  'Tech & Innovation': 'tech',
  'AI & Automation': 'ai',
  'EVs & Mobility': 'evs',
  'Energy & Policy': 'energy',
  'Markets & Money': 'markets',
  'Picks & Reviews': 'picks',
};
---

<BaseLayout
  title="Trendy Tech Tribe"
  description="Your source for tech news, AI insights, EV updates, energy policy, market analysis, and product reviews."
>
  <Header />

  <main>
    <!-- Featured Grid Section -->
    {mainFeature && (
      <section class="featured-grid container">
        <!-- Main Feature (Left) -->
        <div class="main-feature">
          <div class="feature-card main">
            <div class="feature-bg">
              <img 
                src={mainHeroImage} 
                alt={mainFeature.data.imageAlt || mainFeature.data.title}
                loading="eager"
                decoding="async"
              />
              <div class="feature-overlay"></div>
            </div>
            <div class="feature-content">
              <span class="feature-category">{mainFeature.data.category}</span>
              <h1 class="feature-title main-title">
                <a href={`/${categoryMap[mainFeature.data.category]}/${mainFeature.id}`}>
                  {mainFeature.data.title}
                </a>
              </h1>
              <p class="feature-summary">{mainFeature.data.summary}</p>
              <a href={`/${categoryMap[mainFeature.data.category]}/${mainFeature.id}`} class="feature-cta">
                Read Now →
              </a>
            </div>
          </div>
        </div>

        <!-- Side Features (Right) -->
        <div class="side-features">
          {sideFeatures.map(post => {
            const isUnsplashSide = post.data.image.includes('unsplash.com');
            const sideImage = isUnsplashSide 
              ? optimizeUnsplashUrl(post.data.image, 800) 
              : post.data.image;
            
            return (
              <div class="feature-card side">
                <div class="feature-bg">
                  <img 
                    src={sideImage} 
                    alt={post.data.imageAlt || post.data.title}
                    loading="eager"
                    decoding="async"
                  />
                  <div class="feature-overlay side-overlay"></div>
                </div>
                <div class="feature-content side-content">
                  <span class="feature-category small">{post.data.category}</span>
                  <h2 class="feature-title side-title">
                    <a href={`/${categoryMap[post.data.category]}/${post.id}`}>
                      {post.data.title}
                    </a>
                  </h2>
                </div>
              </div>
            );
          })}
        </div>
      </section>
    )}

    <!-- Category Sections -->
    <div class="container">
      <section class="category-section">
        <h2>Tech & Innovation</h2>
        <div class="posts-grid">
          {techPosts.length > 0 ? techPosts.map(post => (
            <PostCard post={post} categorySlug="tech" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/tech" class="section-link">View all Tech posts →</a>
      </section>

      <section class="category-section">
        <h2>AI & Automation</h2>
        <div class="posts-grid">
          {aiPosts.length > 0 ? aiPosts.map(post => (
            <PostCard post={post} categorySlug="ai" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/ai" class="section-link">View all AI posts →</a>
      </section>

      <section class="category-section">
        <h2>EVs & Mobility</h2>
        <div class="posts-grid">
          {evsPosts.length > 0 ? evsPosts.map(post => (
            <PostCard post={post} categorySlug="evs" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/evs" class="section-link">View all EV posts →</a>
      </section>

      <!-- Join the Tribe CTA -->
      <section class="tribe-cta">
        <div class="tribe-content">
          <h2>Join the Tribe</h2>
          <p>Trendy Tech Tribe is here to help you navigate the fast-paced universe of technology. From revealing the latest gadgets to decoding complex tech trends, we empower our tribe with the knowledge they need to stay ahead of the curve.</p>
          <div class="tribe-image">
            <picture>
              <source
                type="image/webp"
                srcset="/images/optimized/join-the-tribe-small.webp 640w,
                        /images/optimized/join-the-tribe-medium.webp 1024w,
                        /images/optimized/join-the-tribe.webp 1456w"
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 900px, 900px"
              />
              <img
                src="/images/optimized/join-the-tribe.webp"
                alt="Join the Trendy Tech Tribe community"
                loading="lazy"
                decoding="async"
                width="1456"
                height="832"
              />
            </picture>
          </div>
          <NewsletterSignup />
        </div>
      </section>

      <section class="category-section">
        <h2>Energy & Policy</h2>
        <div class="posts-grid">
          {energyPosts.length > 0 ? energyPosts.map(post => (
            <PostCard post={post} categorySlug="energy" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/energy" class="section-link">View all Energy posts →</a>
      </section>

      <section class="category-section">
        <h2>Markets & Money</h2>
        <div class="posts-grid">
          {marketsPosts.length > 0 ? marketsPosts.map(post => (
            <PostCard post={post} categorySlug="markets" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/markets" class="section-link">View all Markets posts →</a>
      </section>

      <section class="category-section">
        <h2>Picks & Reviews</h2>
        <div class="posts-grid">
          {picksPosts.length > 0 ? picksPosts.map(post => (
            <PostCard post={post} categorySlug="picks" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/picks" class="section-link">View all Picks posts →</a>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Featured Grid Layout */
  .featured-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-4);
    margin-top: var(--space-8);
    margin-bottom: var(--space-20);
    height: 600px; /* Fixed height for desktop grid */
  }

  .main-feature {
    height: 100%;
  }

  .side-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    height: 100%;
  }

  .feature-card {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    height: 100%;
    display: flex;
    align-items: flex-end;
    border: 1px solid var(--border-dim);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), var(--glow-soft);
    border-color: var(--border-bright);
  }

  .feature-card.main {
    height: 100%;
  }

  .feature-card.side {
    flex: 1; /* Split height equally */
  }

  .feature-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .feature-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .feature-card:hover .feature-bg img {
    transform: scale(1.05);
  }

  .feature-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      0deg,
      rgba(10, 6, 20, 0.95) 0%,
      rgba(10, 6, 20, 0.6) 50%,
      rgba(10, 6, 20, 0.1) 100%
    );
    z-index: 1;
  }

  .side-overlay {
    background: linear-gradient(
      0deg,
      rgba(10, 6, 20, 0.95) 0%,
      rgba(10, 6, 20, 0.4) 100%
    );
  }

  .feature-content {
    position: relative;
    z-index: 10;
    padding: var(--space-8);
    width: 100%;
  }

  .side-content {
    padding: var(--space-6);
  }

  .feature-category {
    display: inline-block;
    background: rgba(180, 74, 255, 0.3);
    border: 1px solid var(--tribal-purple);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    font-size: var(--text-body-sm);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
    box-shadow: var(--glow-purple);
    backdrop-filter: blur(4px);
  }

  .feature-category.small {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    margin-bottom: var(--space-3);
  }

  .feature-title {
    font-family: var(--font-display);
    font-weight: var(--weight-black);
    line-height: var(--line-tight);
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-4);
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  .main-title {
    font-size: var(--text-display);
  }

  .side-title {
    font-size: var(--text-h3);
    margin-bottom: 0; /* No summary on side cards */
  }

  .feature-title a {
    color: white;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: opacity var(--transition-normal);
  }

  .feature-title a:hover {
    opacity: 0.8;
  }

  .feature-summary {
    font-size: var(--text-body-lg);
    color: var(--text-gray-100);
    margin-bottom: var(--space-6);
    line-height: var(--line-relaxed);
    max-width: 65ch;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-shadow: 0 1px 2px rgba(0,0,0,0.5);
  }

  .feature-cta {
    display: inline-block;
    background: linear-gradient(135deg, var(--neon-magenta), var(--neon-cyan));
    color: white;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    font-weight: var(--weight-semibold);
    font-size: var(--text-body-md);
    transition: all var(--transition-normal) var(--easing-smooth);
    box-shadow: var(--glow-magenta);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .feature-cta:hover {
    transform: translateY(-2px);
    box-shadow: var(--glow-magenta-intense), var(--shadow-lg);
  }

  /* Mobile / Tablet Responsive */
  @media (max-width: 1024px) {
    .featured-grid {
      grid-template-columns: 1fr;
      height: auto;
      gap: var(--space-4);
    }

    .side-features {
      flex-direction: row;
      height: 300px;
    }

    .feature-card.main {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .featured-grid {
      margin-top: var(--space-4);
    }

    .side-features {
      flex-direction: column;
      height: auto;
    }

    .feature-card.main {
      height: 350px;
    }

    .feature-card.side {
      height: 250px;
    }

    .main-title {
      font-size: 2rem;
    }

    .feature-summary {
      font-size: 1rem;
      -webkit-line-clamp: 2;
    }
  }

  /* Existing Styles */
  .category-section {
    margin-bottom: var(--space-20);
  }

  .category-section h2 {
    font-size: var(--text-h2);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-4);
    border-bottom: 3px solid transparent;
    border-image: var(--gradient-neon-h);
    border-image-slice: 1;
    letter-spacing: var(--tracking-tight);
    position: relative;
  }

  .category-section h2::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-neon-h);
    box-shadow: var(--glow-cyan);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-6);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  .empty-state {
    color: var(--text-tertiary);
    font-style: italic;
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: var(--weight-semibold);
    color: var(--neon-cyan);
    margin-top: var(--space-4);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .section-link:hover {
    color: var(--neon-magenta);
    transform: translateX(4px);
  }

  .tribe-cta {
    position: relative;
    background: var(--gradient-bg);
    padding: var(--space-24);
    border-radius: var(--radius-2xl);
    margin: var(--space-24) 0;
    border: 1px solid var(--border-bright);
    box-shadow: var(--glow-soft), var(--shadow-xl);
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .tribe-cta {
      padding: var(--space-8);
      margin: var(--space-12) 0;
      border-radius: var(--radius-lg);
    }
  }

  .tribe-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.5;
    pointer-events: none;
  }

  .tribe-content {
    position: relative;
    z-index: 1;
  }

  .tribe-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-8);
    border: none;
    padding: 0;
    text-align: center;
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tribe-content > p {
    font-size: var(--text-body-lg);
    line-height: var(--line-relaxed);
    max-width: 800px;
    margin: 0 auto var(--space-12);
    text-align: center;
    color: var(--text-secondary);
  }

  .tribe-image {
    max-width: 900px;
    margin: 0 auto var(--space-16);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      var(--glow-magenta),
      0 16px 48px rgba(0, 0, 0, 0.4);
    border: 1px solid var(--border-bright);
  }

  .tribe-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .tribe-content h2 {
      font-size: 2rem;
    }

    .tribe-content p {
      font-size: 1rem;
    }
  }

