    flex: 1; /* Takes remaining space (approx 60%) */
    position: relative;
    min-height: 100%;
    overflow: hidden; /* Ensure image scaling is contained */
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center; /* Ensure image is centered */
    transition: transform 0.7s ease;
  }

