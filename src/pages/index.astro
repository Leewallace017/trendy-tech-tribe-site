---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { optimizeUnsplashUrl } from '../utils/imageOptimization';
import { calculateReadTime } from '../utils/calculateReadTime';

// Get latest posts from each category
const techPosts = (await getCollection('tech')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const aiPosts = (await getCollection('ai')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const evsPosts = (await getCollection('evs')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const energyPosts = (await getCollection('energy')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const marketsPosts = (await getCollection('markets')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

const picksPosts = (await getCollection('picks')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 3);

// Get featured posts (Top 3 featured or latest)
const allPosts = [
  ...await getCollection('tech'),
  ...await getCollection('ai'),
  ...await getCollection('evs'),
  ...await getCollection('energy'),
  ...await getCollection('markets'),
  ...await getCollection('picks'),
].sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// 1. Filter for explicitly featured posts
const featuredCandidates = allPosts.filter(post => post.data.featured === true);

// 2. Select top 3 (prefer featured, fill with latest if needed)
let featuredPosts = [];
if (featuredCandidates.length >= 3) {
  featuredPosts = featuredCandidates.slice(0, 3);
} else {
  // Take all featured, then fill the rest with latest non-featured
  featuredPosts = [...featuredCandidates];
  const remainingCount = 3 - featuredPosts.length;
  const nonFeatured = allPosts.filter(p => !p.data.featured);
  featuredPosts = [...featuredPosts, ...nonFeatured.slice(0, remainingCount)];
}

// Ensure we have unique posts (dedupe by id just in case)
featuredPosts = Array.from(new Map(featuredPosts.map(p => [p.id, p])).values()).slice(0, 3);

const [mainFeature, ...sideFeatures] = featuredPosts;
const mainReadTime = mainFeature ? calculateReadTime(mainFeature.body) : 0;

// Prepare hero image for main feature
const isUnsplash = mainFeature?.data.image.includes('unsplash.com');
const mainHeroImage = isUnsplash 
  ? optimizeUnsplashUrl(mainFeature.data.image, 1600) 
  : mainFeature?.data.image;

const categoryMap: Record<string, string> = {
  'Tech & Innovation': 'tech',
  'AI & Automation': 'ai',
  'EVs & Mobility': 'evs',
  'Energy & Policy': 'energy',
  'Markets & Money': 'markets',
  'Picks & Reviews': 'picks',
};
---

<BaseLayout
  title="Trendy Tech Tribe"
  description="Your source for tech news, AI insights, EV updates, energy policy, market analysis, and product reviews."
>
  <Header />

  <main>
    <!-- Featured Grid Section -->
    <!-- Hero Section -->
    {mainFeature && (
      <section class="hero-section container scroll-trigger">
        <div class="hero-card hover-lift">
          <div class="hero-content">
            <span class="feature-category">{mainFeature.data.category} • {mainReadTime} min read</span>
            <h1 class="hero-title">
              <a href={`/${categoryMap[mainFeature.data.category]}/${mainFeature.id}`}>
                {mainFeature.data.title}
              </a>
            </h1>
            <p class="hero-summary">{mainFeature.data.summary}</p>
            <a href={`/${categoryMap[mainFeature.data.category]}/${mainFeature.id}`} class="feature-cta">
              Read Now →
            </a>
          </div>
          <div class="hero-bg">
            {isUnsplash ? (
              <img 
                src={mainHeroImage} 
                alt={mainFeature.data.imageAlt || mainFeature.data.title}
                loading="eager"
                decoding="async"
                fetchpriority="high"
              />
            ) : (
              <Image 
                src={mainHeroImage} 
                alt={mainFeature.data.imageAlt || mainFeature.data.title}
                width={1600}
                height={900}
                widths={[800, 1200, 1600]}
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 1200px, 1600px"
                loading="eager"
                decoding="async"
                fetchpriority="high"
                format="webp"
                quality={80}
              />
            )}
          </div>
        </div>
      </section>
    )}

    <!-- Trending Strip -->
    {sideFeatures.length > 0 && (
      <section class="trending-section container scroll-trigger">
        <div class="trending-header">
          <span class="trending-label">Trending Now</span>
          <div class="trending-line"></div>
        </div>
        <div class="trending-grid">
          {sideFeatures.map((post, index) => {
            const isUnsplashSide = post.data.image.includes('unsplash.com');
            const sideImage = isUnsplashSide 
              ? optimizeUnsplashUrl(post.data.image, 600) 
              : post.data.image;
            
            const readTime = calculateReadTime(post.body);
            
            return (
              <a href={`/${categoryMap[post.data.category]}/${post.id}`} class={`trending-card hover-lift delay-${(index + 1) * 100}`}>
                <div class="trending-image">
                  {isUnsplashSide ? (
                    <img 
                      src={sideImage} 
                      alt={post.data.imageAlt || post.data.title}
                      loading="lazy"
                      decoding="async"
                    />
                  ) : (
                    <Image 
                      src={sideImage} 
                      alt={post.data.imageAlt || post.data.title}
                      width={600}
                      height={338}
                      widths={[300, 600]}
                      sizes="(max-width: 768px) 100vw, 300px"
                      loading="lazy"
                      decoding="async"
                      format="webp"
                      quality={80}
                    />
                  )}
                </div>
                <div class="trending-content">
                  <span class="trending-category">{post.data.category} • {readTime} min read</span>
                  <h3 class="trending-title">{post.data.title}</h3>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    )}

    <!-- Category Sections -->
    <div class="container">
      <section class="category-section scroll-trigger">
        <h2>Tech & Innovation</h2>
        <div class="posts-grid">
          {techPosts.length > 0 ? techPosts.map(post => (
            <PostCard post={post} categorySlug="tech" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/tech" class="section-link">View all Tech posts →</a>
      </section>

      <section class="category-section scroll-trigger">
        <h2>AI & Automation</h2>
        <div class="posts-grid">
          {aiPosts.length > 0 ? aiPosts.map(post => (
            <PostCard post={post} categorySlug="ai" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/ai" class="section-link">View all AI posts →</a>
      </section>

      <section class="category-section scroll-trigger">
        <h2>EVs & Mobility</h2>
        <div class="posts-grid">
          {evsPosts.length > 0 ? evsPosts.map(post => (
            <PostCard post={post} categorySlug="evs" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/evs" class="section-link">View all EV posts →</a>
      </section>



      <section class="category-section scroll-trigger">
        <h2>Energy & Policy</h2>
        <div class="posts-grid">
          {energyPosts.length > 0 ? energyPosts.map(post => (
            <PostCard post={post} categorySlug="energy" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/energy" class="section-link">View all Energy posts →</a>
      </section>

      <section class="category-section scroll-trigger">
        <h2>Markets & Money</h2>
        <div class="posts-grid">
          {marketsPosts.length > 0 ? marketsPosts.map(post => (
            <PostCard post={post} categorySlug="markets" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/markets" class="section-link">View all Markets posts →</a>
      </section>

      <section class="category-section scroll-trigger">
        <h2>Picks & Reviews</h2>
        <div class="posts-grid">
          {picksPosts.length > 0 ? picksPosts.map(post => (
            <PostCard post={post} categorySlug="picks" />
          )) : (
            <p class="empty-state">No posts yet. Check back soon!</p>
          )}
        </div>
        <a href="/picks" class="section-link">View all Picks posts →</a>
      </section>


    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
