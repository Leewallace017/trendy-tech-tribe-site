---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { calculateReadTime } from '../../utils/calculateReadTime';

const posts = (await getCollection('energy')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout
  title="Energy & Policy"
  description="Clean energy technology, grid infrastructure, energy storage, tech policy, regulation, and commentary on energy and climate topics."
>
  <Header />

  <main>
    <div class="container">
      <header class="category-header">
        <h1>Energy & Policy</h1>
        <p class="category-description">
          Clean energy, grid technology, storage solutions, and tech-related policy, regulation, and opinion.
        </p>
      </header>

      <div class="posts-grid">
        {posts.map(post => (
          <article class="post-card">
            <a href={`/energy/${post.id}`} class="post-image">
              <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
            </a>
            <div class="post-content">
              <time datetime={post.data.date} class="post-date">
                {new Date(post.data.date).toLocaleDateString('en-US', {
                  month: 'short',
                  day: 'numeric',
                  year: 'numeric'
                })}
              </time>
              <h2>
                <a href={`/energy/${post.id}`}>{post.data.title}</a>
              </h2>
              <p class="post-summary">{post.data.summary}</p>
              <div class="post-meta">
                <span class="post-type">{post.data.type.replace('-', ' ')} â€¢ {calculateReadTime(post.body)} min read</span>
                {post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .category-header {
    padding: var(--space-16) 0 var(--space-12);
    margin-bottom: var(--space-12);
    position: relative;
  }

  .category-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-neon-h);
    box-shadow: var(--glow-cyan);
  }

  .category-header h1 {
    font-family: var(--font-display);
    font-size: var(--text-display);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-4);
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .category-description {
    font-size: var(--text-body-lg);
    color: var(--text-secondary);
    max-width: 800px;
    line-height: var(--line-relaxed);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-glow);
    box-shadow: var(--glow-soft), var(--shadow-lg);
  }

  .post-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .post-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(10, 6, 20, 0.4) 70%,
      rgba(10, 6, 20, 0.7) 100%
    );
    pointer-events: none;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) var(--easing-smooth);
  }

  .post-card:hover .post-image img {
    transform: scale(1.08);
  }

  .post-content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    flex: 1;
  }

  .post-date {
    font-size: var(--text-body-sm);
    color: var(--text-tertiary);
    font-weight: var(--weight-medium);
  }

  .post-card h2 {
    font-size: var(--text-h4);
    font-weight: var(--weight-bold);
    line-height: var(--line-snug);
    margin: 0;
  }

  .post-card h2 a {
    color: var(--text-primary);
    transition: color var(--transition-normal) var(--easing-smooth);
  }

  .post-card h2 a:hover {
    color: var(--neon-cyan);
  }

  .post-summary {
    font-size: var(--text-body);
    color: var(--text-secondary);
    line-height: var(--line-normal);
    margin: 0;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
    margin-top: auto;
  }

  .post-type {
    background: var(--bg-elevated);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-body-xs);
    color: var(--text-secondary);
    text-transform: capitalize;
    font-weight: var(--weight-medium);
    letter-spacing: var(--tracking-wide);
    border: 1px solid var(--border-normal);
  }

  .post-tags {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--text-body-xs);
    color: var(--neon-cyan);
    font-weight: var(--weight-medium);
    transition: color var(--transition-normal);
  }

  .tag:hover {
    color: var(--neon-magenta);
  }

  .tag::before {
    content: "#";
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
