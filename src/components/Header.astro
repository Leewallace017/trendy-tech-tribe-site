---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { label: 'Tech', href: '/tech' },
  { label: 'AI', href: '/ai' },
  { label: 'EVs', href: '/evs' },
  { label: 'Energy', href: '/energy' },
  { label: 'Markets', href: '/markets' },
  { label: 'Picks', href: '/picks' },
];
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo">
        <img src="/logo.svg" alt="Trendy Tech Tribe" width="120" height="120">
      </a>

      <div class="nav-container">
        <nav class="main-nav">
          {navItems.map(item => (
            <a href={item.href} class="nav-link">{item.label}</a>
          ))}
        </nav>
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    width: 100%;
    background: var(--bg-glass);
    backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal) var(--easing-smooth);
  }

  .header-content {
    padding: var(--space-4) 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-8);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
    filter: drop-shadow(0 0 10px rgba(92, 255, 128, 0.3));
    transition: filter var(--transition-normal) var(--easing-smooth);
  }

  .logo:hover {
    filter: drop-shadow(0 0 20px rgba(92, 255, 128, 0.5));
  }

  .logo img {
    width: 120px;
    height: 120px;
    transition: transform var(--transition-normal) var(--easing-smooth);
  }

  .logo:hover img {
    transform: scale(1.05);
  }

  [data-theme="light"] .logo {
    filter: drop-shadow(0 0 5px rgba(123, 31, 162, 0.15));
  }

  [data-theme="light"] .logo:hover {
    filter: drop-shadow(0 0 10px rgba(123, 31, 162, 0.3));
  }

  .nav-container {
    display: flex;
    align-items: center;
    gap: var(--space-8);
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: var(--space-8);
  }

  .nav-link {
    position: relative;
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
    font-size: var(--text-body);
    text-decoration: none;
    transition: color var(--transition-normal) var(--easing-smooth);
    padding-bottom: var(--space-1);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--neon-cyan), var(--neon-magenta));
    transition: width var(--transition-normal) var(--easing-smooth);
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link[aria-current="page"] {
    color: var(--neon-cyan);
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: var(--space-4);
      padding: var(--space-3) 0;
    }

    .logo img {
      width: 80px;
      height: 80px;
    }

    .main-nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--space-4);
    }

    .nav-link {
      font-size: var(--text-body-sm);
    }
  }

  @media (max-width: 640px) {
    .nav-container {
      flex-direction: column;
      gap: var(--space-4);
      width: 100%;
    }

    .main-nav {
      width: 100%;
      justify-content: space-around;
    }
  }
</style>
