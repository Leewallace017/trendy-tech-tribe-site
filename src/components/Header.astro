---
const navItems = [
  { label: 'Tech', href: '/tech' },
  { label: 'AI', href: '/ai' },
  { label: 'EVs', href: '/evs' },
  { label: 'Energy', href: '/energy' },
  { label: 'Markets', href: '/markets' },
  { label: 'Picks', href: '/picks' },
];
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo">
        <img src="/logo.svg" alt="Trendy Tech Tribe" width="40" height="40">
        <span>Trendy Tech Tribe</span>
      </a>

      <nav class="main-nav">
        {navItems.map(item => (
          <a href={item.href} class="nav-link">{item.label}</a>
        ))}
      </nav>
    </div>
  </div>
</header>

<style>
  .site-header {
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-md) 0;
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.95);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .logo:hover {
    color: var(--color-primary);
  }

  .main-nav {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-link {
    font-weight: 500;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: var(--space-md);
    }

    .main-nav {
      gap: var(--space-md);
      font-size: 0.9rem;
    }
  }
</style>
