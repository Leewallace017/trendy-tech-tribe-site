---
import NewsletterForm from './NewsletterForm.astro';

const currentYear = new Date().getFullYear();
const today = new Date();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Trendy Tech Tribe Home">
          <img src="/images/logos/logo.svg" alt="Trendy Tech Tribe Logo" width="180" height="60" />
        </a>
        <p>Exploring the future of technology, one byte at a time.</p>
      </div>

      <div class="footer-section">
        <h4>Categories</h4>
        <ul>
          <li><a href="/tech">Tech & Innovation</a></li>
          <li><a href="/ai">AI & Automation</a></li>
          <li><a href="/evs">EVs & Mobility</a></li>
          <li><a href="/energy">Energy & Policy</a></li>
          <li><a href="/markets">Markets & Money</a></li>
          <li><a href="/picks">Picks & Reviews</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Connect</h4>
        <ul>
          <li><a href="/newsletter">Newsletter</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Legal</h4>
        <ul>
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/affiliate-disclosure">Affiliate Disclosure</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-newsletter">
      <NewsletterForm />
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Trendy Tech Tribe. All rights reserved.</p>
      <p class="disclosure">As an Amazon Associate, Trendy Tech Tribe earns from qualifying purchases. We may earn commissions from other affiliate links at no additional cost to you. See our <a href="/affiliate-disclosure">Affiliate Disclosure</a> and <a href="/privacy">Privacy Policy</a> for details.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    background: var(--gradient-bg);
    color: var(--text-primary);
    padding: var(--space-24) 0 var(--space-8);
    margin-top: var(--space-24);
    border-top: 1px solid var(--border-bright);
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.3;
    pointer-events: none;
  }

  .site-footer .container {
    position: relative;
    z-index: 1;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-16);
  }

  .footer-brand {
    max-width: 320px;
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: var(--space-4);
    transition: opacity var(--transition-normal) var(--easing-smooth);
  }

  .footer-logo:hover {
    opacity: 0.8;
  }

  .footer-logo img {
    width: 180px;
    height: auto;
    display: block;
  }

  .footer-brand p {
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
    font-size: var(--text-body);
  }

  .footer-section h3 {
    font-family: var(--font-display);
    font-size: var(--text-h3);
    font-weight: var(--weight-black);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-section h4 {
    font-size: var(--text-h5);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
    letter-spacing: var(--tracking-wide);
  }

  .footer-section p {
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
    max-width: 35ch;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-section ul li {
    margin-bottom: 0;
  }

  .footer-section a {
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
    transition: all var(--transition-normal) var(--easing-smooth);
    display: inline-block;
    position: relative;
  }

  .footer-section a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--neon-cyan);
    transition: width var(--transition-normal) var(--easing-smooth);
  }

  .footer-section a:hover {
    color: var(--neon-cyan);
    transform: translateX(4px);
  }

  .footer-section a:hover::after {
    width: 100%;
  }

  .footer-bottom {
    border-top: 1px solid var(--border-normal);
    padding-top: var(--space-8);
    text-align: center;
    color: var(--text-tertiary);
    font-size: var(--text-body-sm);
  }

  .footer-bottom p {
    color: var(--text-tertiary);
    max-width: none;
  }

  .disclosure {
    margin-top: var(--space-2);
    font-size: var(--text-body-xs);
    opacity: 0.8;
  }

  /* Footer newsletter styling */
  .footer-newsletter {
    margin-bottom: var(--space-12);
    padding: var(--space-8);
    background: rgba(255, 255, 255, 0.02);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-normal);
  }

  @media (max-width: 968px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }

    .footer-brand {
      grid-column: 1 / -1;
      max-width: 100%;
    }
  }

  @media (max-width: 640px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .site-footer {
      padding: var(--space-16) 0 var(--space-6);
    }

    .footer-logo img {
      width: 150px;
    }

    .footer-brand {
      text-align: center;
    }

    .footer-logo {
      margin-left: auto;
      margin-right: auto;
    }
  }

  .footer-newsletter .newsletter-form-container {
    background: none;
    border: none;
    padding: 0;
    margin: 0 auto;
    max-width: 600px;
  }
</style>
