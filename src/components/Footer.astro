---
import NewsletterForm from './NewsletterForm.astro';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Trendy Tech Tribe Home">
          <img src="/images/logos/logo.svg" alt="Trendy Tech Tribe Logo" width="180" height="60" />
        </a>
        <p>Exploring the future of technology, one byte at a time.</p>
      </div>

      <div class="footer-section">
        <h4>Categories</h4>
        <ul>
          <li><a href="/tech">Tech & Innovation</a></li>
          <li><a href="/ai">AI & Automation</a></li>
          <li><a href="/evs">EVs & Mobility</a></li>
          <li><a href="/energy">Energy & Policy</a></li>
          <li><a href="/markets">Markets & Money</a></li>
          <li><a href="/picks">Picks & Reviews</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Connect</h4>
        <ul>
          <li><a href="/newsletter">Newsletter</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Legal</h4>
        <ul>
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/affiliate-disclosure">Affiliate Disclosure</a></li>
        </ul>
      </div>
    </div>

    <!-- Join the Tribe CTA (Compact) -->
    <div class="tribe-cta-compact" id="newsletter">
      <div class="tribe-image-compact">
        <img src="/images/optimized/join-the-tribe-small.webp" alt="Trendy Tech Tribe" width="220" height="220" loading="lazy" />
      </div>
      <div class="tribe-content-compact">
        <h2>Join the Tribe</h2>
        <p>Navigate the fast-paced universe of technology with us. Get the latest gadgets, trends, and insights delivered to your inbox.</p>
      </div>
      <div class="tribe-form-compact">
        <NewsletterForm />
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Trendy Tech Tribe. All rights reserved.</p>
      <p class="disclosure">As an Amazon Associate, Trendy Tech Tribe earns from qualifying purchases. We may earn commissions from other affiliate links at no additional cost to you. See our <a href="/affiliate-disclosure">Affiliate Disclosure</a> and <a href="/privacy">Privacy Policy</a> for details.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    background: var(--gradient-bg);
    color: var(--text-primary);
    padding: var(--space-12) 0 var(--space-6);
    margin-top: var(--space-16);
    border-top: 1px solid var(--border-bright);
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 0% 0%, rgba(180, 74, 255, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 100% 100%, rgba(0, 255, 255, 0.1) 0%, transparent 50%);
    opacity: 0.5;
    pointer-events: none;
  }

  .site-footer .container {
    position: relative;
    z-index: 1;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  .footer-brand {
    max-width: 320px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: var(--space-2);
    transition: opacity var(--transition-normal) var(--easing-smooth);
  }

  .footer-logo:hover {
    opacity: 0.8;
  }

  .footer-logo img {
    width: 220px; /* Increased from 150px */
    height: auto;
    display: block;
  }

  .footer-brand p {
    color: var(--text-secondary);
    line-height: var(--line-normal);
    font-size: var(--text-body-sm);
    text-align: center;
  }

  .footer-section h3 {
    font-family: var(--font-display);
    font-size: var(--text-h4);
    font-weight: var(--weight-black);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-section h4 {
    font-size: var(--text-body-lg);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    letter-spacing: var(--tracking-wide);
  }

  .footer-section p {
    color: var(--text-secondary);
    line-height: var(--line-normal);
    max-width: 35ch;
    font-size: var(--text-body-sm);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .footer-section ul li {
    margin-bottom: 0;
  }

  .footer-section a {
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
    font-size: var(--text-body-sm);
    transition: all var(--transition-normal) var(--easing-smooth);
    display: inline-block;
    position: relative;
  }

  .footer-section a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--neon-cyan);
    transition: width var(--transition-normal) var(--easing-smooth);
  }

  .footer-section a:hover {
    color: var(--neon-cyan);
    transform: translateX(4px);
  }

  .footer-section a:hover::after {
    width: 100%;
  }

  .footer-bottom {
    border-top: 1px solid var(--border-normal);
    padding-top: var(--space-6);
    text-align: center;
    color: var(--text-tertiary);
    font-size: var(--text-body-xs);
  }

  .footer-bottom p {
    color: var(--text-tertiary);
    max-width: none;
  }

  .disclosure {
    margin-top: var(--space-2);
    font-size: var(--text-body-xs);
    opacity: 0.8;
  }

  /* Join the Tribe Compact Banner */
  .tribe-cta-compact {
    position: relative;
    background: rgba(255, 255, 255, 0.03);
    padding: var(--space-8) var(--space-12);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-8);
    border: 1px solid var(--border-bright);
    box-shadow: var(--glow-soft), var(--shadow-lg);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }

  .tribe-cta-compact::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.3;
    pointer-events: none;
    animation: pulse-glow 4s infinite alternate ease-in-out;
  }

  .tribe-image-compact {
    flex-shrink: 0;
    width: 220px; /* Increased size */
    height: 220px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--glow-soft);
  }

  .tribe-image-compact img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tribe-content-compact {
    flex: 1;
    position: relative;
    z-index: 1;
    max-width: 450px;
  }

  .tribe-content-compact h2 {
    font-family: var(--font-display);
    font-size: var(--text-h3);
    font-weight: var(--weight-black);
    margin-bottom: var(--space-2);
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tribe-content-compact p {
    font-size: var(--text-body-lg);
    color: var(--text-secondary);
    margin: 0;
  }

  .tribe-form-compact {
    flex: 0 0 350px;
    position: relative;
    z-index: 1;
  }

  /* Override NewsletterForm styles for this context */
  .tribe-form-compact :global(.newsletter-form-container) {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    max-width: 100%;
    box-shadow: none;
  }

  @keyframes pulse-glow {
    0% { opacity: 0.2; transform: scale(1); }
    100% { opacity: 0.4; transform: scale(1.05); }
  }

  @media (max-width: 1024px) {
    .tribe-cta-compact {
      flex-direction: column;
      text-align: center;
      padding: var(--space-8);
      gap: var(--space-6);
    }

    .tribe-image-compact {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }

    .tribe-content-compact {
      max-width: 100%;
    }

    .tribe-form-compact {
      flex: 0 0 auto;
      width: 100%;
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {
    .tribe-cta-compact {
      padding: var(--space-6);
    }

    .tribe-content-compact h2 {
      font-size: var(--text-h4);
    }

    .tribe-content-compact p {
      font-size: var(--text-body);
    }
  }
</style>
