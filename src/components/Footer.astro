---
import NewsletterForm from './NewsletterForm.astro';

const currentYear = new Date().getFullYear();
const today = new Date();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <h3>Trendy Tech Tribe</h3>
        <p>Exploring the future of technology, one byte at a time.</p>
      </div>
      
      <div class="footer-newsletter">
        <NewsletterForm />
      </div>

      <div class="footer-section">
        <h4>Categories</h4>
        <ul>
          <li><a href="/tech">Tech & Innovation</a></li>
          <li><a href="/ai">AI & Automation</a></li>
          <li><a href="/evs">EVs & Mobility</a></li>
          <li><a href="/energy">Energy & Policy</a></li>
          <li><a href="/markets">Markets & Money</a></li>
          <li><a href="/picks">Picks & Reviews</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Connect</h4>
        <ul>
          <li><a href="/newsletter">Newsletter</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Trendy Tech Tribe. All rights reserved.</p>
      <p class="disclosure">As an Amazon Associate, Trendy Tech Tribe earns from qualifying purchases. We may earn commissions from other affiliate links at no additional cost to you. Prices and availability are subject to change.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    background: var(--gradient-bg);
    color: var(--text-primary);
    padding: var(--space-24) 0 var(--space-8);
    margin-top: var(--space-24);
    border-top: 1px solid var(--border-bright);
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-glow);
    opacity: 0.3;
    pointer-events: none;
  }

  .site-footer .container {
    position: relative;
    z-index: 1;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-12);
    margin-bottom: var(--space-16);
  }

  .footer-section h3 {
    font-family: var(--font-display);
    font-size: var(--text-h3);
    font-weight: var(--weight-black);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
    background: var(--gradient-text-neon);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-section h4 {
    font-size: var(--text-h5);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
    letter-spacing: var(--tracking-wide);
  }

  .footer-section p {
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
    max-width: 35ch;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-section ul li {
    margin-bottom: 0;
  }

  .footer-section a {
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
    transition: all var(--transition-normal) var(--easing-smooth);
    display: inline-block;
    position: relative;
  }

  .footer-section a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--neon-cyan);
    transition: width var(--transition-normal) var(--easing-smooth);
  }

  .footer-section a:hover {
    color: var(--neon-cyan);
    transform: translateX(4px);
  }

  .footer-section a:hover::after {
    width: 100%;
  }

  .footer-bottom {
    border-top: 1px solid var(--border-normal);
    padding-top: var(--space-8);
    text-align: center;
    color: var(--text-tertiary);
    font-size: var(--text-body-sm);
  }

  .footer-bottom p {
    color: var(--text-tertiary);
    max-width: none;
  }

  .disclosure {
    margin-top: var(--space-2);
    font-size: var(--text-body-xs);
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .site-footer {
      padding: var(--space-16) 0 var(--space-6);
    }
  }

  /* Footer specific newsletter styling */
  .footer-newsletter {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-4);
  }

  .footer-newsletter .newsletter-form-container {
    background: none;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    max-width: 320px;
    width: 100%;
  }

  .footer-newsletter .newsletter-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
    background: var(--gradient-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-newsletter .newsletter-content p {
    margin-bottom: var(--space-2);
    color: var(--text-secondary);
  }

  .footer-newsletter .input-group {
    gap: var(--space-2);
  }

  .footer-newsletter input[type="email"] {
    padding: var(--space-2) var(--space-3);
  }

  .footer-newsletter .submit-btn {
    padding: var(--space-2) var(--space-4);
  }
</style>
