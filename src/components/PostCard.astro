---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'tech' | 'ai' | 'evs' | 'energy' | 'markets' | 'picks'>;
  categorySlug: string;
}

const { post, categorySlug } = Astro.props;
---

<article class="post-card">
  <a href={`/${categorySlug}/${post.id}`} class="post-image">
    {post.data.image.startsWith('http') ? (
      <img
        src={post.data.image}
        alt={post.data.imageAlt || post.data.title}
        width="600"
        height="338"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <Image
        src={post.data.image}
        alt={post.data.imageAlt || post.data.title}
        width={600}
        height={338}
        widths={[400, 800]}
        sizes="(max-width: 768px) 100vw, 600px"
        loading="lazy"
        decoding="async"
        format="webp"
        quality={80}
      />
    )}
  </a>
  <div class="post-content">
    <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
    <h3>
      <a href={`/${categorySlug}/${post.id}`}>{post.data.title}</a>
    </h3>
    <p>{post.data.summary}</p>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal) var(--easing-smooth);
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-glow);
    box-shadow: var(--glow-soft), var(--shadow-lg);
  }

  .post-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    display: block;
    background: var(--bg-tertiary);
  }

  .post-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(10, 6, 20, 0.4) 70%,
      rgba(10, 6, 20, 0.7) 100%
    );
    pointer-events: none;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) var(--easing-smooth);
  }

  .post-card:hover .post-image img {
    transform: scale(1.08);
  }

  .post-content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .post-date {
    display: block;
    font-size: var(--text-body-sm);
    color: var(--text-tertiary);
    font-weight: var(--weight-medium);
    margin-bottom: 0;
  }

  .post-card h3 {
    font-size: var(--text-h4);
    font-weight: var(--weight-bold);
    line-height: var(--line-snug);
    margin: 0;
  }

  .post-card h3 a {
    color: var(--text-primary);
    transition: color var(--transition-normal) var(--easing-smooth);
    text-decoration: none;
  }

  .post-card h3 a:hover {
    color: var(--neon-cyan);
  }

  .post-card p {
    font-size: var(--text-body);
    color: var(--text-secondary);
    line-height: var(--line-normal);
    margin: 0;
  }
</style>
