---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

import { calculateReadTime } from '../utils/calculateReadTime';

interface Props {
  post: CollectionEntry<'tech' | 'ai' | 'evs' | 'energy' | 'markets' | 'picks'>;
  categorySlug: string;
  isHighlight?: boolean;
  isHorizontal?: boolean;
}

const { post, categorySlug, isHighlight = false, isHorizontal = false } = Astro.props;
const readTime = calculateReadTime(post.body);
---

<article class={`post-card ${isHighlight ? 'post-card--highlight' : ''} ${isHorizontal ? 'post-card--horizontal' : ''}`}>
  <a href={`/${categorySlug}/${post.id}`} class="post-image">
    {post.data.image.startsWith('http') ? (
      <img
        src={post.data.image}
        alt={post.data.imageAlt || post.data.title}
        width={isHighlight ? 800 : 600}
        height={isHighlight ? 450 : 338}
        loading="lazy"
        decoding="async"
      />
    ) : (
      <Image
        src={post.data.image}
        alt={post.data.imageAlt || post.data.title}
        width={isHighlight ? 800 : 600}
        height={isHighlight ? 450 : 338}
        widths={[400, 800]}
        sizes={isHighlight ? "(max-width: 768px) 100vw, 800px" : isHorizontal ? "120px" : "(max-width: 768px) 100vw, 600px"}
        loading="lazy"
        decoding="async"
        format="webp"
        quality={80}
      />
    )}
  </a>
  <div class="post-content">
    <div class="post-meta-row">
      <span class="post-date">{new Date(post.data.date).toLocaleDateString()}</span>
      <span class="post-read-time">• {readTime} min read</span>
    </div>
    <h3>
      <a href={`/${categorySlug}/${post.id}`}>{post.data.title}</a>
    </h3>
    <p>{post.data.summary}</p>
    {isHighlight && (
      <a href={`/${categorySlug}/${post.id}`} class="read-more">
        Read Article →
      </a>
    )}
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal) var(--easing-smooth);
    height: 100%;
  }

  /* Highlight Card Layout */
  .post-card--highlight {
    flex-direction: row;
    height: 100%;
    min-height: 280px; /* Reduced from 300px */
  }

  .post-card--highlight .post-image {
    width: 60%; /* Increased from 55% */
    aspect-ratio: auto;
    height: 100%;
  }

  .post-card--highlight .post-content {
    width: 40%; /* Reduced from 45% */
    justify-content: center;
    padding: var(--space-6); /* Reduced padding */
  }

  .post-card--highlight h3 {
    font-size: var(--text-h4); /* Slightly smaller heading */
    margin-bottom: var(--space-3);
  }

  .post-card--highlight p {
    font-size: var(--text-body);
    -webkit-line-clamp: 4; /* Allow one more line if needed, or keep 3 */
  }

  @media (max-width: 768px) {
    .post-card--highlight {
      flex-direction: column;
      min-height: auto;
    }

    .post-card--highlight .post-image,
    .post-card--highlight .post-content {
      width: 100%;
    }

    .post-card--highlight .post-image {
      aspect-ratio: 16 / 9;
    }
    .post-card--highlight .post-image {
      aspect-ratio: 16 / 9;
    }
  }

  /* Horizontal Card Layout (Small) */
  .post-card--horizontal {
    flex-direction: row;
    height: auto;
    min-height: 100px;
    align-items: center;
    border: none;
    background: transparent;
  }

  .post-card--horizontal .post-image {
    width: 120px;
    height: 90px;
    flex-shrink: 0;
    aspect-ratio: 4/3;
    border-radius: var(--radius-md);
    margin-right: var(--space-4);
  }

  .post-card--horizontal .post-content {
    padding: 0;
    justify-content: center;
  }

  .post-card--horizontal h3 {
    font-size: var(--text-body-lg);
    margin-bottom: var(--space-1);
  }

  .post-card--horizontal p {
    display: none; /* Hide summary on small horizontal cards */
  }

  .post-card--horizontal .post-date {
    font-size: var(--text-body-xs);
    margin-bottom: var(--space-1);
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-glow);
    box-shadow: var(--glow-soft), var(--shadow-lg);
  }

  .post-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    display: block;
    background: var(--bg-tertiary);
  }

  .post-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(10, 6, 20, 0.4) 70%,
      rgba(10, 6, 20, 0.7) 100%
    );
    pointer-events: none;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) var(--easing-smooth);
  }

  .post-card:hover .post-image img {
    transform: scale(1.08);
  }

  .post-content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .post-meta-row {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .post-date {
    display: block;
    font-size: var(--text-body-sm);
    color: var(--text-tertiary);
    font-weight: var(--weight-medium);
  }

  .post-read-time {
    font-size: var(--text-body-sm);
    color: var(--text-tertiary);
    font-weight: var(--weight-medium);
  }

  .post-card h3 {
    font-size: var(--text-h4);
    font-weight: var(--weight-bold);
    line-height: var(--line-snug);
    margin: 0;
  }

  .post-card h3 a {
    color: var(--text-primary);
    transition: color var(--transition-normal) var(--easing-smooth);
    text-decoration: none;
  }

  .post-card h3 a:hover {
    color: var(--neon-cyan);
  }

  .post-card p {
    font-size: var(--text-body);
    color: var(--text-secondary);
    line-height: var(--line-normal);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    display: inline-block;
    margin-top: var(--space-2);
    font-weight: var(--weight-semibold);
    color: var(--neon-cyan);
    font-size: var(--text-body-sm);
  }

  .read-more:hover {
    color: var(--neon-magenta);
    text-decoration: underline;
  }
</style>
