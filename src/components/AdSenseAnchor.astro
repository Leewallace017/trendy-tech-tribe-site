---
/**
 * Google AdSense Anchor Ad Component
 * Fixed bottom ad for mobile devices
 */
interface Props {
  slot?: string; // AdSense slot ID (to be provided after AdSense approval)
}

const { slot = 'YOUR_AD_SLOT_ID' } = Astro.props;
---

<div class="adsense-anchor">
  <!-- Google AdSense Anchor Ad -->
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-1313072084978240"
       data-ad-slot={slot}
       data-ad-format="auto"
       data-full-width-responsive="true"></ins>
</div>

<script is:inline>
  if (typeof window !== 'undefined') {
    (window.adsbygoogle = window.adsbygoogle || []).push({});
  }
</script>

<style>
  .adsense-anchor {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    /* Background and padding removed to prevent empty black box */
    display: flex;
    justify-content: center;
    pointer-events: none; /* Allow clicks through empty container */
  }

  .adsense-anchor > * {
    pointer-events: auto; /* Re-enable clicks on the ad itself */
  }

  @media (min-width: 769px) {
    .adsense-anchor {
      display: none; /* Only show on mobile */
    }
  }
</style>
